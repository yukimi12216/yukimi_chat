<!--users_login.ejs-->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="container sticky-top">
      <nav class="py-3 border-bottom">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="text-center">
            <h3 class="text-dark" style="font-family: 'arial black'">
              Chat service
            </h3>
          </div>
        </div>
      </nav>
    </div>
    <div class="container py-5">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div
            class="shadow p-3 login-box"
            style="border-radius: 0.75rem; background-color: #eff1f2"
          >
            <div class="text-center">
              <h2>Login</h2>
            </div>
            <form action="/users/login" id="login" method="post">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  name="employee_id"
                  class="form-control"
                  id="employee_id"
                  placeholder="account id"
                  required=""
                />
                <label for="employee_id">Account id</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  id="password"
                  placeholder="password"
                  required=""
                />
                <label for="password">Password</label>
              </div>
              <div class="button-form position-relative mb-3 row">
                <div class="col">
                  <button
                    class="btn btn-outline-dark btn-lg px-5 mb-3"
                    type="submit"
                  >
                    Login
                  </button>
                </div>
                <div id="register" class="col d-flex align-items-end pb-3">
                  <a href="/users/register" style="color: #393f81" class=""
                    >Register here</a
                  >
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer'); %>
  </body>
</html>
