<!-- room_delete_user.ejs -->
<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/index_header'); %>
    <div class="container py-4">
      <div class="row d-flex justify-content-center align-items-center">
        <div>
          <h2 class="text-center pt-5">ルームユーザー一覧</h2>
        </div>

        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div
            class="shadow p-3 login-box"
            style="border-radius: 0.75rem; background-color: #eff1f2"
          >
            <table class="table">
              <tbody>
                <% for (const object of members) { %>
                <tr>
                  <td>
                    <a><%= object.User.name %></a>
                  </td>
                  <td>
                    <form
                      action="/index/read_room/delete_user/<%= roomId %>"
                      method="post"
                    >
                      <button
                        type="submit"
                        name="user_id"
                        value="<%= object.user_id %>"
                      >
                        削除
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer'); %>
  </body>
</html>
