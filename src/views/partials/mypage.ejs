<!--mypage.ejs-->
<div class="container py-4">
  <div class="row d-flex justify-content-center align-items-center">
    <a
      href="/index/create_room"
      class="col-12 col-md-8 col-lg-6 col-xl-2 shadow p-3 inline-block text-dark text-center h3"
      style="
        border-radius: 0.75rem;
        background-color: #eff1f2;
        text-decoration: none;
      "
    >
      グループ作成
    </a>
    <div>
      <h2 class="text-center pt-5">グループ一覧</h2>
      <% for (const object of groups) { %>
      <div class="row d-flex justify-content-center align-items-center py-3">
        <a
          href="/index/read_room/<%= object.Room.id %>"
          class="col-12 col-md-8 col-lg-6 col-xl-5 shadow p-3 inline-block text-dark text-center inline-block h3"
          style="
            border-radius: 0.75rem;
            background-color: #eff1f2;
            text-decoration: none;
          "
        >
          <%= object.Room.name %>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</div>
